<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xfhy.viewmeasuretest.MainActivity">

  <com.xfhy.viewmeasuretest.MyView
      android:id="@+id/myview"
      android:background="@color/colorXfhy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <com.xfhy.viewmeasuretest.MyTextView
      android:id="@+id/mtv_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_below="@id/myview"
      android:layout_centerHorizontal="true"
      android:textSize="40sp"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:text="Android"/>

  <com.xfhy.viewmeasuretest.FlashingTextView
      android:id="@+id/ft"
      android:layout_below="@id/mtv_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="My Android TextView"
      android:textSize="25sp"
      android:gravity="center"/>

  <include layout="@layout/topbar" />

</RelativeLayout>
